                        <input type='hidden', name='sum', id="sum", value="<%= cart.sum.amount %>" />
                        <input type='hidden', name='sum_eth', id="sum_eth", value="<%= cart.sum.eth.amount %>" />
                        <input type='hidden', name='eth_exchange', id="eth_exchange", value="<%= eth %>" />
                        <input type='hidden', name='currency', id="currency", value="<%= cart.currency.currency %>" />
                        <input type='hidden', name='transaction_hash', id="transaction_hash", value="" />
                        
                        
                        <div class="row">
                            <div class="col-lg-6 col-sm-12 col-xs-12">
                                <div class="checkout-title">
                                    <h3>Billing Details</h3>
                                </div>
                                <div class="row check-out">
                                    <!--
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">First Name</div>
