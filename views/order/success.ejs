    <!-- order-detail section start -->
    <section class="section-b-space">
        <div class="container">
            <div class="row">
                <% if(order.order_details.length > 0) { %>
                <div class="col-lg-6">
                    <div class="product-order">
                        <% for(od of order.order_details) { %>
                        <div class="row product-order-detail">
                            <div class="col-3"><img src="<%= od.photo %>" alt=""
                                    class="img-fluid blur-up lazyload"></div>
                            <div class="col-3 order_detail">
                                <div>
                                    <h4>product name</h4>
                                    <h5><%= od.name %></h5>
                                </div>
                            </div>
                            <div class="col-3 order_detail">
                                <div>
                                    <h4>quantity</h4>
                                    <h5><%= od.quantity %></h5>
                                </div>
                            </div>
                            <div class="col-3 order_detail">
                                <div>
                                    <h4>price</h4>
                                    <h5>≈<%= od.price.eth.amount.toFixed(6) %> ETH</h5>
                                    <h4><%= od.price.currency.symbol %><%= od.price.amount %></h4>
                                    
                                </div>
                            </div>
                        </div>
                        <% } %>
                        

                        <div class="total-sec">
                            <ul>
                                <li>subtotal <span><%= order.subtotal.currency.symbol %><%= order.subtotal.amount %></span></li>
                                <li>shipping <span><%= order.shipping.cost.amount %></span></li>
                                <li>tax(GST) <span><%= order.tax.amount %></span></li>
                            </ul>
                        </div>
                        <div class="final-total">
                            <h3>total <span><%= order.total.currency.symbol %><%= order.total.amount %></span> <span>≈<%= order.total.eth.amount %> ETH</span></h3>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="order-success-sec">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4>summary</h4>
                                <ul class="order-detail">
                                    <li>order ID: <%= order.id %></li>
                                    <li>Order Date: <%= order.order_date %></li>
                                    <li>Order Total: <%= order.total.currency.symbol %><%= order.total.amount %></li>
                                </ul>
                            </div>
                            <div class="col-sm-6">
                                <h4>shipping address</h4>
                                <ul class="order-detail">
                                    <li><%= order.customer.name %></li>
                                    <li><%= order.customer.shipping_address.address1 %> <%= order.customer.shipping_address.address2 %></li>
                                    <li><%= order.customer.shipping_address.city %> <%= order.customer.shipping_address.state %></li>
                                    <li><%= order.customer.shipping_address.country %></li>
                                    <li>Contact No. <%= order.customer.phone %></li>
                                </ul>
                            </div>
                            <div class="col-sm-12 payment-mode">
                                <h4>payment method</h4>
                                <p>Metamask</p>
                            </div>
                            <div class="col-md-12">
                                <div class="delivery-sec">
                                    
                                    <p>Address: <%= order.shipping.address.address %></p>
                                    <p>Carrier: <%= order.shipping.carrier %></p>
                                    <p>Tracking#: <%= order.shipping.carrier_tracking_number %></p>

                                    <h3>expected date of delivery: </span></h3>
                                    <a href="/order/tracking/<%= order.id %>">track order</a>
                                    <a href="/">back to shopping</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <!-- Section ends -->


